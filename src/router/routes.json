{
  "/": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Homepage is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/destinations": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Destinations page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/deals": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Deals page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/help": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Help page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
"/hotel/:id": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Hotel details are publicly accessible",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/booking/:confirmationNumber": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "User must be logged in to view booking confirmation",
            "rule": "authenticated"
          }
        ]
      },
      "redirectOnDeny": "/login"
    }
  },
  "/login": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Login page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/signup": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Signup page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/callback": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Authentication callback is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/error": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Error page is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/prompt-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password prompt is public",
            "rule": "public"
          }
        ]
      }
    }
  },
  "/reset-password/**/*": {
    "allow": {
      "when": {
        "conditions": [
          {
            "label": "Password reset is public",
            "rule": "public"
          }
        ]
      }
    }
  }
}